   <children>
      <TextField fx:id="email" layoutX="226.0" layoutY="162.0" promptText="email" />
      <TextField fx:id="password" layoutX="226.0" layoutY="200.0" promptText="password" />
      <Button fx:id="loginButton" layoutX="278.0" layoutY="239.0" mnemonicParsing="false" onAction="#login" text="Login">
